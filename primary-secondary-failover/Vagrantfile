
Vagrant.configure("2") do |config|
  config.vm.box = "CentOS-6.3-x86_64-minimal"
  config.vm.box_url = "https://dl.dropbox.com/u/7225008/Vagrant/CentOS-6.3-x86_64-minimal.box"

  PROJECT="examples"
  BINTRAY_YUM_REPO_URL="https://bintray.com/rundeck/ci-staging-rpm/rpm"
  PRIMARY="rundeck1"
  SECONDARY="rundeck2"

  config.vm.define :mysql do |mysql|
    mysql.vm.hostname = "centos-mysql.local"
    mysql.vm.network :private_network, ip: "192.168.50.6"
    mysql.vm.network :forwarded_port, guest: 3306, host: 13306
    mysql.vm.provision :shell, :path => "install-mysql.sh", :args => "'mysql'"
  end

  config.vm.define :rundeck1 do |primary|
    primary.vm.hostname = "#{PRIMARY}"
    primary.vm.network :private_network, ip: "192.168.50.4"
    primary.vm.network :forwarded_port, guest: 4440, host: 14440
    primary.vm.provision :shell, :path => "bootstrap.sh", :args => "#{PRIMARY} 192.168.50.6 #{BINTRAY_YUM_REPO_URL}"
    primary.vm.provision :shell, :path => "add-project.sh", :args => "#{PROJECT} #{PRIMARY} 192.168.50.4 rundeck,primary"
    primary.vm.provision :shell, :path => "generate-apikey.sh"
  end

  config.vm.define :rundeck2 do |secondary|
    secondary.vm.hostname = "#{SECONDARY}"
    secondary.vm.network :private_network, ip: "192.168.50.5"
    secondary.vm.network :forwarded_port, guest: 4440, host: 24440
    secondary.vm.provision :shell, :path => "bootstrap.sh", :args => "#{SECONDARY} 192.168.50.6 #{BINTRAY_YUM_REPO_URL}"
    secondary.vm.provision :shell, :path => "add-project.sh", :args => "#{PROJECT} #{SECONDARY} 192.168.50.5 rundeck,secondary"
    secondary.vm.provision :shell, :path => "add-primary.sh", :args => "#{PROJECT} #{PRIMARY} 192.168.50.4"
    secondary.vm.provision :shell, :path => "load-jobs.sh", :args => "#{PROJECT} 192.168.50.4:4440"
  end

end

